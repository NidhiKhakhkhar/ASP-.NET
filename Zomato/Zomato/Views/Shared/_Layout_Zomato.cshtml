@using Zomato.BAL;
<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Zomato</title>
    <link rel="icon" href="~/assets/img/download.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/userAssets/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/userAssets/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/userAssets/css/owl.carousel.min.css">
    <!-- themify CSS -->
    <link rel="stylesheet" href="~/userAssets/css/themify-icons.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/userAssets/css/flaticon.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/userAssets/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/userAssets/css/slick.css">
    <link rel="stylesheet" href="~/userAssets/css/gijgo.min.css">
    <link rel="stylesheet" href="~/userAssets/css/nice-select.css">
    <link rel="stylesheet" href="~/userAssets/css/all.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/userAssets/css/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<style>
    .logo img {
        max-height: 40px;
        margin-right: 6px;
    }

    #main {
        margin-top: 80px;
        padding: 20px 180px;
        transition: all 0.3s;
    }

    .body {
        padding: 20px 180px;
    }

  

    .nav {
        background-color: white;
    }

    .breadcrumb {
        position: relative;
        z-index: auto;
        text-align: center;
    }

    p {
        font-size: 15px;
        margin-bottom: 0px;
    }

    .rating {
        background-color: green;
        color: white;
        border-radius: 5px;
        padding: 5px;
    }

    .restricted-text {
        max-width: auto; /* Set the maximum width for the paragraph */
        white-space: nowrap; /* Prevent text from wrapping */
        overflow: hidden; /* Hide any overflow text */
        text-overflow: ellipsis; /* Display ellipsis (...) for overflow text */
    }

    .card {
        border: none;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 0px 15px;
        
    }

    a {
        text-decoration: none;
        color: gray;
    }

    .cart-icon {
        position: relative;
        display: inline-block;
    }

    .cart-count {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: #FF2E2E;
        color: white;
        border-radius: 50%;
        padding: 3px 6px;
        font-size: 12px;
    }

    .quantity-container a {
        color: white;
    }


    .quantity-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 80px;
        padding: 5px;
        border: 1px solid #ccc;
        background-color: #FF2E2E;
        color: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .footer{
        padding-top:100px;
    }

    body{
            font-family: Okra, Helvetica, sans-serif;
    }

    h1, h2, h3, h4, h5, h6 ,p{
  color: #2c3033;
  font-family: Okra, Helvetica, sans-serif;
}

.footer-area .copyright_part_text {
    border-top: 1px solid #e2e2e2;
    /* padding-top: 25px; */
    margin-top: 50px;
}

</style>

<body>
    <header>
        <nav class="navbar  navbar-expand-lg navbar-light bg-light fixed-top pt-4 body" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand d-inline-flex logo"><img class="d-inline-block " src="~/userAssets/img/logoblack.png" alt="logo" /></a>

                <div class="d-flex align-items-center" id="navbarSupportedContent">
                    <div class="">
                        <p class="mb-0 fw-bold text-lg-center">Deliver to: <i class="fa fa-map-marker pr-2 text-dark" style="font-size:24px"></i><span>@CV.Address()</span></p>
                    </div>
                    <div class="d-flex align-items-center">
                        @*  <form class="d-flex"> *@
                        <div class="input-group flex-nowrap px-4 align-items-baseline">
                            <span class="input-group-text border-0" id="addon-wrapping"><i class="fa fa-search text-dark" style="font-size:20px"></i></span>
                            <input class="form-control border-0 input-box bg-100 pt-0" type="search" placeholder="Search Food" aria-label="Search" />
                        </div>
                       <div class="cart-icon" >
                            <a asp-area="User" asp-controller="Cart" asp-action="CartList" asp-route-userid="@CV.UserID()">
                                <span>
                                    <i class="fa fa-shopping-cart " style="font-size:30px;" aria-hidden="true"></i>
                                    @if(CV.CartCount() > 0)
                                    {
                                        <span class="cart-count">@CV.CartCount()</span>
                                    }
                                </span>
                            </a>
                       </div>
                        
                        @if(CV.UserName() == null)
                        {
                            <div class="px-4">
                                <a asp-area="User" asp-controller="User" asp-action="SEC_UserLogin">Login</a>
                            </div>
                        }
                        else
                        {
                        <div class="dropdown">
                            <button class="btn btn-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle-o pr-2" style="font-size:24px"></i>@CV.UserName()
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <!-- Dropdown items here -->
                                <a class="dropdown-item" asp-area="User" asp-controller="User" asp-action="Logout">Logout</a>
                                <a class="dropdown-item"  asp-area="User"  asp-controller="Order" asp-action="OrderList" asp-route-userid="@CV.UserID()">Your Orders</a>
                                <a class="dropdown-item" asp-area="User" asp-controller="User" asp-action="ProfilePage">Profile</a>
                            </div>
                        </div>
                        }
                        

                        @*  </form> *@
                    </div>
                </div>
            </div>
        </nav>
    </header>





    <main>
        @RenderBody()
    </main><!-- End #main -->

    <br />
    <br />

    
    <!-- footer part start-->
    <footer class="footer-area body footer">
        <hr />
        <div class="container">
            <div class="row pb-4">
               <a class="navbar-brand d-inline-flex logo"><img class="d-inline-block " src="~/userAssets/img/logoblack.png" alt="logo" /></a>
            </div>
            <div class="row ">
                <div class="col-xl-3 col-sm-6 col-md-3 col-lg-3">
                    <div class="single-footer-widget footer_1">
                        <h4>About Zomato</h4>
                        <div class="contact_info">
                            <ul class="ps-0">
                                <li><a>Who We Are</a></li>
                                <li><a>Blog</a></li>
                                <li><a>Work With Us</a></li>
                                <li><a>Investor Relations</a></li>
                                <li><a>Report Fraud</a></li>
                                <li><a>Press Kit</a></li>
                                <li><a>Contact Us</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-md-2 col-lg-3">
                    <div class="single-footer-widget footer_2">
                        <h4>Zomaverse</h4>
                        <div class="contact_info">
                            <ul class="ps-0">
                                <li><a href="#">Zomato</a></li>
                                <li><a href="#">Blinkit</a></li>
                                <li><a href="#">Feeding India</a></li>
                                <li><a href="#">Hyperpure</a></li>
                                <li><a href="#">Zomaland</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-md-3 col-lg-3">
                    <div class="single-footer-widget footer_2">
                        <h4>For Restaurants</h4>
                        <div class="contact_info">
                            <ul class="ps-0">
                                <li><a>Partner With Us</a></li>
                                <li><a>Apps For You</a></li>
                            </ul class="ps-0">
                        </div>
                        <h4>For EnterPrises</h4>
                        <div class="contact_info">
                            <ul class="ps-0">
                                <li><a>Zomato For Enterprise</a></li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-sm-6 col-md-4 col-lg-3">
                    <div class="single-footer-widget footer_3">
                        <h4>Learn More</h4>
                       <div class="contact_info">
                            <ul class="ps-0">
                                <li><a>Privacy</a></li>
                                <li><a>Security</a></li>
                                <li><a>Terms</a></li>
                                <li><a>Sitemap</a></li>
                                
                            </ul>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="copyright_part_text">
                <div class="row">
                    <div class="col-lg-8">
                        <p class="footer-text m-0">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | Designed by <span class="fw-bolder">Nidhi Khakhkhar</span>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                    <div class="col-lg-4">
                        <div class="copyright_social_icon text-right">
                            <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="#"><i class="fa fa-twitter-square"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                            <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            <a href="#"><i class="fa fa-youtube-play" aria-hidden="true"></i></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer part end-->

    <!-- ===============================================-->
    <!-- jquery plugins here-->
    <!-- jquery -->
    <script src="~/userAssets/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/userAssets/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/userAssets/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="~/userAssets/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="~/userAssets/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="~/userAssets/js/masonry.pkgd.js"></script>
    <!-- particles js -->
    <script src="~/userAssets/js/owl.carousel.min.js"></script>
    <!-- swiper js -->
    <script src="~/userAssets/js/slick.min.js"></script>
    <script src="~/userAssets/js/gijgo.min.js"></script>
    <script src="~/userAssets/js/jquery.nice-select.min.js"></script>
    <!-- custom js -->
    <script src="~/userAssets/js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>