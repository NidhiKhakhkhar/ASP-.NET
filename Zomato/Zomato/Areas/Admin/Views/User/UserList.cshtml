@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;
@model DataTable;

<main class="main" id="main">

    <div class="border rounded p-5 ">

        <div class="d-flex justify-content-between align-items-center ">
            <h3 class="fw-bold"><i class="ri-emotion-line me-2" style="font-size: 20px"></i>Users</h3>

        </div>

        <div class="w-25 ms-auto my-3">
            <div class="input-group datatables_filter" id="sample_1_filter">
                <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                <input type="text" class="form-control input-sm input-small input-inline" id="sample_1" aria-controls="sample_1" placeholder="Search here">
            </div>
        </div>

        <hr />

        <div>
            <table class="table table-striped table-bordered" id="">
                <thead>
                    <tr>
                        <th>Active</th>
                        <th>UserName</th>
                        <th>Name</th>
                        <th>PhoneNo</th>
                        <th>Email</th>
                        <th>LastLoginDate</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody id="sample_2">
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>
                                @{
                                    if (Convert.ToBoolean(dr["IsActive"]))
                                    {
                                        <i class="bi bi-circle-fill" style="color:mediumseagreen"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-circle-fill" style="color: red"></i>
                                    }
                                }
                            </td>
                            <td>@dr["UserName"]</td>
                            <td>@dr["FirstName"] @dr["LastName"]</td>
                            <td>@dr["PhoneNo"]</td>
                            <td>@dr["Email"]</td>
                            <td>@Convert.ToDateTime(dr["LastLoginDate"]).ToString("dd-MM-yyyy")</td>
                            <td>
                                @if (!Convert.ToBoolean(dr["IsAdmin"]))
                                {
                                    <a asp-area="Admin" asp-controller="Order" asp-action="UserOrderList" asp-route-userid="@Convert.ToInt32(dr["UserID"])" asp-route-username="@dr["UserName"]">
                                        Orders
                                    </a>

                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</main>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#sample_1").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });

    </script>
}