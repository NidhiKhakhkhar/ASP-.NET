@{


    Layout = Layout = "~/Views/Shared/_Layout.cshtml";


}
@using Zomato.BAL;
@using System.Data;
@model DataTable;

<main class="main" id="main">
    <div class="container">



        <h3>@CV.UserOrder() Orders</h3>

    </div>
    <br />
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>

                </tr>
            </thead>
            <tbody>
                @foreach (DataRow dr in Model.Rows)
                {

                    <tr>

                        <td>@dr["ItemName"]</td>
                        <td>@dr["Price"]</td>
                        <td>@dr["Quantity"]</td>
                        <td>@dr["Subtotal"]</td>


                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr />
    <hr />
    <hr />
    <hr />
</main>

