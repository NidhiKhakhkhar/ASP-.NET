@{
    Layout = "~/Views/Shared/_Layout_Zomato.cshtml";
}
@model Zomato.Areas.User.Models.UserModel;
@using Zomato.BAL;

<main class="main" id="main">
    <div class="container">
        <h3>Profile Page</h3>
        <nav class="nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="User1" asp-action="UserIndex">Home</a></li>
                
                <li class="breadcrumb-item active">Profile Page</li>
            </ol>
        </nav>
    </div>

    <br />

    <div class="container ">
        <div class="col-xl-12">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>



                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            
                            <h5 class="card-title p-3">Profile Details</h5>

                            <div class="row p-3">
                                <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                <div class="col-lg-9 col-md-8">@Model.FirstName @Model.LastName</div>
                            </div>

                            <div class="row p-3">
                                <div class="col-lg-3 col-md-4 label">Address</div>
                                <div class="col-lg-9 col-md-8">@Model.Address</div>
                            </div>

                            <div class="row p-3">
                                <div class="col-lg-3 col-md-4 label">Phone</div>
                                <div class="col-lg-9 col-md-8">@Model.PhoneNo</div>
                            </div>



                            <div class="row p-3">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">@Model.Email</div>
                            </div>



                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                            <form asp-area="User" asp-controller="User" asp-action="EditProfilePage" method="post">

                                @Html.HiddenFor(x => x.UserID)
                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="FirstName" type="text" class="form-control" id="fullName" value="@Model.FirstName">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="LastName" type="text" class="form-control" id="fullName" value="@Model.LastName">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="Address" type="text" class="form-control" id="Address" value="@Model.Address">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="PhoneNo" type="text" class="form-control" id="Phone" value="@Model.PhoneNo">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="Email" type="email" class="form-control" id="Email" value="@Model.Email">
                                    </div>
                                </div>



                                <div class="text-center">

                                    <button type="submit" class="btn btn-primary">Save Changes</button>

                                </div>
                            </form><!-- End Profile Edit Form -->

                        </div>



                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</main>